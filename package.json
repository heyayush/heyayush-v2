{
  "name": "heyayush",
  "version": "1.0.0",
  "private": true,
  "description": "A minimal, lightweight, and mobile-first starter for creating blogs using Gatsby.",
  "author": "Ayush Sharma <hey.ayush.sharma@gmail.com> (https://heyayush.com)",
  "keywords": [
    "gatsby",
    "react",
    "template"
  ],
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,scss,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "npm run lint-es && npm run lint-css",
    "lint-es": "eslint src/ --cache --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern",
    "lint-css": "stylelint \"src/**/*.scss\" \"src/**/*.html\"",
    "lint-css:fix": "stylelint \"src/**/*.scss\" \"src/**/*.html\" --fix"
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "classnames": "^2.3.2",
    "dotenv": "^9.0.0",
    "gatsby": "^5.2.0",
    "gatsby-codemods": "^4.2.0",
    "gatsby-link": "^5.2.0",
    "gatsby-plugin-catch-links": "^5.2.0",
    "gatsby-plugin-feed": "^5.2.0",
    "gatsby-plugin-google-analytics": "^5.2.0",
    "gatsby-plugin-manifest": "^5.2.0",
    "gatsby-plugin-netlify-cms": "^7.2.0",
    "gatsby-plugin-offline": "^6.2.0",
    "gatsby-plugin-optimize-svgs": "^1.0.5",
    "gatsby-plugin-react-helmet": "^6.2.0",
    "gatsby-plugin-sass": "^6.2.0",
    "gatsby-plugin-sharp": "^5.2.0",
    "gatsby-plugin-sitemap": "^6.2.0",
    "gatsby-remark-autolink-headers": "^6.2.0",
    "gatsby-remark-copy-linked-files": "^6.2.0",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^7.2.0",
    "gatsby-remark-katex": "^7.2.0",
    "gatsby-remark-prismjs": "^7.2.0",
    "gatsby-remark-relative-images": "^2.0.2",
    "gatsby-remark-responsive-iframe": "^6.2.0",
    "gatsby-remark-smartypants": "^6.2.0",
    "gatsby-source-filesystem": "^5.2.0",
    "gatsby-transformer-remark": "^6.2.0",
    "gatsby-transformer-sharp": "^5.2.0",
    "invariant": "^2.2.4",
    "katex": "^0.16.3",
    "lodash": "^4.17.21",
    "lost": "^9.0.1",
    "netlify-cms-app": "^2.15.72",
    "normalize-scss": "^7.0.1",
    "postcss-pxtorem": "^6.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-disqus-comments": "^1.4.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.09",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-helmet": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gatsby-cli": "^5.2.0",
    "husky": "4.2.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.0",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heyayush/heyayush-v2"
  },
  "bugs": {
    "url": "https://github.com/heyayush/heyayush-v2/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss}": [
      "npm run format",
      "npm run lint && exit 0"
    ]
  }
}
