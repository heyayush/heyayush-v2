{
  "name": "template-lumen",
  "version": "1.0.0",
  "private": true,
  "description": "A minimal, lightweight, and mobile-first starter for creating blogs using Gatsby.",
  "author": "Ayush Sharma <hey.ayush.sharma@gmail.com> (https://heyayush.com)",
  "keywords": [
    "gatsby",
    "react",
    "template"
  ],
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,scss,json,md}\"",
    "start": "yarn run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "yarn run lint-es && yarn run lint-css",
    "lint-es": "eslint src/ --cache --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern",
    "lint-css": "stylelint \"src/**/*.scss\" \"src/**/*.html\"",
    "lint-css:fix": "stylelint \"src/**/*.scss\" \"src/**/*.html\" --fix"
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "gatsby": "^3.4.1",
    "gatsby-link": "^3.4.0",
    "gatsby-plugin-catch-links": "^3.4.0",
    "gatsby-plugin-feed": "^3.4.0",
    "gatsby-plugin-google-analytics": "^3.4.0",
    "gatsby-plugin-manifest": "^3.4.0",
    "gatsby-plugin-netlify-cms": "^5.4.1",
    "gatsby-plugin-offline": "^4.4.0",
    "gatsby-plugin-optimize-svgs": "^1.0.5",
    "gatsby-plugin-react-helmet": "^4.4.0",
    "gatsby-plugin-sass": "^4.4.0",
    "gatsby-plugin-sharp": "^3.4.1",
    "gatsby-plugin-sitemap": "^4.0.0",
    "gatsby-remark-autolink-headers": "^4.1.0",
    "gatsby-remark-copy-linked-files": "^4.1.0",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^5.1.0",
    "gatsby-remark-katex": "^5.1.0",
    "gatsby-remark-prismjs": "^5.1.0",
    "gatsby-remark-relative-images": "^2.0.2",
    "gatsby-remark-responsive-iframe": "^4.1.0",
    "gatsby-remark-smartypants": "^4.1.0",
    "gatsby-source-filesystem": "^3.4.0",
    "gatsby-transformer-remark": "^4.1.0",
    "gatsby-transformer-sharp": "^3.4.0",
    "invariant": "^2.2.4",
    "katex": "^0.13.5",
    "lodash": "^4.17.21",
    "lost": "^8.3.1",
    "netlify-cms-app": "^2.15.2",
    "normalize-scss": "^7.0.1",
    "postcss-pxtorem": "^6.0.0",
    "prismjs": "^1.23.0",
    "react": "^17.0.1",
    "react-disqus-comments": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby-cli": "^3.1.0",
    "husky": "4.2.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.12",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heyayush/template-lumen"
  },
  "bugs": {
    "url": "https://github.com/heyayush/template-lumen/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss}": [
      "yarn run format",
      "yarn run lint && exit 0"
    ]
  }
}
